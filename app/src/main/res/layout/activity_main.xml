<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.linccy.graffiti_sample.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/graffiti_controller"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/undo"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="撤销" />

            <TextView
                android:id="@+id/redo"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="恢复" />

            <TextView
                android:id="@+id/clear"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="清除" />

            <TextView
                android:id="@+id/round"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="旋转" />

            <TextView
                android:id="@+id/color_selector"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="颜色" />

            <TextView
                android:id="@+id/save"
                style="@style/btn_common_style"
                android:layout_gravity="center_vertical"
                android:text="保存" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/graffiti_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/graffiti_controller" />
    </RelativeLayout>

</RelativeLayout>
